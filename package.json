{
    "name": "star-wars-graphql-nextjs",
    "version": "1.0.0",
    "description": "Star Wars GraphQL API with Next.js",
    "main": "index.js",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "lint": "eslint --ignore-path .eslintignore --ext .js,.ts,.tsx .",
        "check-types": "tsc",
        "prettier": "prettier --ignore-path .prettierignore \"**/*.+(js|json)\"",
        "format": "npm run prettier -- --write",
        "check-format": "npm run prettier -- --list-different",
        "validate": "npm-run-all --parallel check-types check-format lint build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/andramalmen/star-wars-graphql-nextjs.git"
    },
    "keywords": [
        "graphql",
        "jest",
        "nextjs",
        "apollo",
        "hooks"
    ],
    "author": "Andra Malmen",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/andramalmen/star-wars-graphql-nextjs/issues"
    },
    "homepage": "https://github.com/andramalmen/star-wars-graphql-nextjs#readme",
    "dependencies": {
        "autoprefixer": "^10.2.5",
        "next": "^10.0.8",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "postcss": "^8.2.8",
        "tailwindcss": "^2.0.3"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "@testing-library/user-event": "^12.8.3",
        "@types/node": "^14.14.34",
        "@types/react": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "husky": "^5.1.3",
        "lint-staged": "^10.5.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "typescript": "^4.2.3"
    }
}
